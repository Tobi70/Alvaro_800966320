<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Post details</title>
    <link rel="stylesheet" type="text/css" href="../css/main.css">
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
</head>
<body>

<%- include ('partials/nav.ejs') -%>

<div  class="grid-item"><a id="title"> <%= user.username %> </a><p id="size">
        <%= user.password %>
    </p></div>

<i class='fas fa-trash' style='font-size:24px'></i><a id="delete" data-doc="<%= user._id %>">Delete</a>


<script>
    const trash = document.querySelector('#delete');
    trash.addEventListener(('click'), (e) => {
        const endpoint = `/user/${trash.dataset.doc}`;

        fetch(endpoint, {
            method: 'DELETE'
        })
            .then((res) => window.location.href = "/listUser")
            .catch(err => console.log(err))
    })

</script>

</body>
</html>